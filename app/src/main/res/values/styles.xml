<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="AppTheme.Transparent" parent="AppTheme">
        <!--        <item name="android:windowBackground">@drawable/temp_welcome</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--圆角-->
    <style name="roundedCornerImageStyle_8b">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_8</item>
    </style>
    <style name="roundedCornerImageStyle_10b">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_10</item>
    </style>
    <!--圆形图片-->
    <style name="circleCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>